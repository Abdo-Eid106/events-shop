<main class="main">
   <%- include('partials/profileHeader.ejs', { path }) %>
   <div class="flex flex-col justify-between gap-10 sm:flex-row sm:gap-20">
      <%- include('partials/manageAccount', { path }) %>

      <div class="mx-auto w-full sm:max-w-[710px]">
         <h1 class="mb-4 text-xl font-medium leading-7 text-black">
            Edit your profile
         </h1>
         <% var errs = (typeof errors != 'undefined') %>
         <form action="/profile" method="post" class="w-full space-y-6 sm:space-y-8">
            <div class="flex flex-col items-center gap-6 sm:flex-row sm:gap-8">
               <p class="w-full sm:w-1/2">
                  <label for="first" class="mb-2 block text-sm font-semibold text-primary-900">First name</label>
                  <input type="text" id="first" name="firstName" value="<%= user.firstName %>"
                     class="block h-[55px] w-full rounded-full border border-stone-500 border-opacity-25 bg-transparent px-5 text-stone-900 outline-none placeholder:text-stone-900/30 focus:border-primary-900" />
               </p>
               <% if (errs && typeof errors.firstName != 'undefined') { %>
               <span class="text-xs font-bold text-stone-500">
                  <%= errors.firstName %>
               </span>
               <% } %>

               <p class="w-full sm:w-1/2">
                  <label for="last" class="mb-2 block text-sm font-semibold text-primary-900">Last name</label>
                  <input type="text" id="last" name="lastName" value="<%= user.lastName %>"
                     class="block h-[55px] w-full rounded-full border border-stone-500 border-opacity-25 bg-transparent px-5 text-stone-900 outline-none placeholder:text-stone-900/30 focus:border-primary-900" />
               </p>
               <% if (errs && typeof errors.lastName != 'undefined') { %>
               <span class="text-xs font-bold text-stone-500">
                  <%= errors.lastName %>
               </span>
               <% } %>
            </div>

            <div class="flex flex-col items-center gap-6 sm:flex-row sm:gap-8">
               <p class="w-full sm:w-1/2">
                  <label for="email" class="mb-2 block text-sm font-semibold text-primary-900">Email</label>
                  <input type="email" id="email" name="email" value="<%= user.email %>"
                     class="block h-[55px] w-full rounded-full border border-stone-500 border-opacity-25 bg-transparent px-5 text-stone-900 outline-none placeholder:text-stone-900/30 focus:border-primary-900" />
               </p>
               <% if (errs && typeof errors.email != 'undefined') { %>
               <span class="text-xs font-bold text-stone-500">
                  <%= errors.email %>
               </span>
               <% } %>
               <p class="w-full sm:w-1/2">
                  <label for="address" class="mb-2 block text-sm font-semibold text-primary-900">Address</label>
                  <input type="text" id="address" name="address" value="<%= user.address %>"
                     class="block h-[55px] w-full rounded-full border border-stone-500 border-opacity-25 bg-transparent px-5 text-stone-900 outline-none placeholder:text-stone-900/30 focus:border-primary-900" />
               </p>
               <% if (errs && typeof errors.address != 'undefined') { %>
               <span class="text-xs font-bold text-stone-500">
                  <%= errors.address %>
               </span>
               <% } %>
            </div>

            <p>
               <label for="password-1" class="mb-2 block text-sm font-semibold text-primary-900">Password
                  changes</label>
               <input type="password" id="password-1"
                  class="block h-[55px] w-full rounded-full border border-stone-500 border-opacity-25 bg-transparent px-5 text-stone-900 outline-none placeholder:text-stone-900/30 focus:border-primary-900"
                  placeholder="Current password" name="password" />
            </p>
            <% if (errs && typeof errors.password != 'undefined') { %>
            <span class="text-xs font-bold text-stone-500">
               <%= errors.password %>
            </span>
            <% } %>
            <p>
               <input type="password"
                  class="block h-[55px] w-full rounded-full border border-stone-500 border-opacity-25 bg-transparent px-5 text-stone-900 outline-none placeholder:text-stone-900/30 focus:border-primary-900"
                  placeholder="New password" name="newPassword" />
            </p>
            <% if (errs && typeof errors.newPassword != 'undefined') { %>
            <span class="text-xs font-bold text-stone-500">
               <%= errors.newPassword %>
            </span>
            <% } %>
            <p>
               <input type="password"
                  class="block h-[55px] w-full rounded-full border border-stone-500 border-opacity-25 bg-transparent px-5 text-stone-900 outline-none placeholder:text-stone-900/30 focus:border-primary-900"
                  placeholder="Confirm new password" name="passwordConfirm" />
            </p>
            <% if (errs && typeof errors.passwordConfirm != 'undefined') { %>
            <span class="text-xs font-bold text-stone-500">
               <%= errors.passwordConfirm %>
            </span>
            <% } %>

            <div class="flex items-center justify-end gap-6">
               <a href="/profile">
                  <button type="button" class="text-primary-900 transition-colors hover:text-opacity-65">
                     Cancel
                  </button>
               </a>
               <button type="submit"
                  class="h-[55px] rounded-full border-none bg-secondary-900 px-6 font-bold text-primary-100 outline-none transition-colors hover:bg-secondary-900/75 disabled:bg-secondary-900/50">
                  Save changes
               </button>
            </div>
         </form>
      </div>
   </div>
</main>