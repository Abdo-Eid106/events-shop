<main class="main sm:mb-14">
   <% var err = (typeof error !== 'undefined') %>
   <h1 class="mb-8 text-center text-2xl font-semibold tracking-wide sm:text-4xl">
      Welcome to dar aure
   </h1>

   <form action="/signin" method="post" class="mx-auto w-full max-w-lg space-y-6">
      <p>
         <label for="mail" class="mb-2 block text-sm font-semibold text-stone-900">Email</label>
         <input type="email" id="mail" name="email" value="<%= err ? email: '' %>"
            class="block h-[55px] w-full rounded-full border border-stone-500 border-opacity-25 bg-transparent px-5 text-stone-900 outline-none placeholder:text-stone-900/30 focus:border-primary-900"
            placeholder="name@email.com" />
      </p>
      <div>
         <label for="password" class="mb-2 block text-sm font-semibold text-stone-900">Password</label>
         <div class="relative mb-1 flex items-center">
            <input type="password" id="password" name="password" value="<%= err ? password: '' %>"
               class="mb-2 block h-[55px] w-full rounded-full border border-stone-500 border-opacity-25 bg-transparent px-5 text-stone-900 outline-none placeholder:text-stone-900/30 focus:border-primary-900"
               placeholder="enter your password" />

            <button type="button" data-hs-toggle-password='{
          "target": "#password"
        }' class="absolute end-4 -translate-y-1">
               <svg class="h-6 w-6 flex-shrink-0 text-primary-900/30" width="24" height="24" viewBox="0 0 24 24"
                  fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <path class="hidden hs-password-active:block" d="M9.88 9.88a3 3 0 1 0 4.24 4.24" />
                  <path class="hidden hs-password-active:block"
                     d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68" />
                  <path class="hidden hs-password-active:block"
                     d="M6.61 6.61A13.526 13.526 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61" />
                  <line class="hidden hs-password-active:block" x1="2" x2="22" y1="2" y2="22" />
                  <path class="block hs-password-active:hidden" d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z" />
                  <circle class="block hs-password-active:hidden" cx="12" cy="12" r="3" />
               </svg>
            </button>

         </div>
         <% if (err) { %>
         <p>
            <span class="text-xs font-bold text-stone-500">
               <%= error %>
            </span>
         </p>
         <% } %>
         <a href="/forgotpassword" class="text-xs font-extrabold text-primary-900 hover:underline">Forget password?</a>
      </div>

      <button type="submit"
         class="block h-[55px] w-full rounded-full border-none bg-primary-900 font-bold text-primary-100 outline-none transition-colors hover:bg-primary-900/75 disabled:bg-primary-900/50">
         Sign In
      </button>
   </form>

   <p class="mt-4 text-center text-sm font-bold capitalize text-stone-900">
      <a href="/signup" class="text-primary-900 hover:underline">create account</a>
   </p>
</main>