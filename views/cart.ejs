<main class="main max-w-[863px]">
   <ol class="mb-8 flex items-center whitespace-nowrap sm:mb-12" aria-label="Breadcrumb">
      <li class="inline-flex items-center">
         <a class="flex items-center text-xl font-semibold text-primary-900 text-opacity-60 sm:text-4xl" href="/">
            Home
         </a>
         <svg class="h-6 w-6 flex-shrink-0 sm:h-10 sm:w-10" width="16" height="16" viewBox="0 0 16 16" fill="none"
            xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M6 13L10 3" stroke="currentColor" stroke-linecap="round" />
         </svg>
      </li>
      <li class="inline-flex items-center truncate text-xl font-semibold text-primary-900 sm:text-4xl"
         aria-current="page">
         Cart
      </li>
   </ol>

   <div class="space-y-6 divide-y divide-primary-900">
      <% for (const event of events) { %>
      <div class="flex flex-col items-center gap-8 pt-6 first:pt-0 sm:flex-row">
         <div class="w-full sm:max-w-[172px]">
            <div class="overflow-hidden rounded-tl-[66px] rounded-tr-[66px]">
               <img src="<%= event.image %>" class="max- h-[184.18px] w-full origin-center object-cover" alt="" />
               <p class="bg-primary-900 px-4 pb-8 pt-4 text-center text-lg text-primary-100 sm:text-xl">
                  <%= event.name %>
               </p>
            </div>
         </div>

         <div class="w-full sm:flex-1">
            <div class="flex items-start justify-between gap-4">
               <div class="space-y-3">
                  <h2 class="text-2xl font-medium leading-tight"><%= event.name %></h2>
                  <p class="max-w-[45ch] font-light text-black text-opacity-75">
                     <%= event.description %>
                  </p>
                  <p class="text-sm leading-tight"><%= event.city %>, <%= event.country %></p>
                  <p class="text-sm leading-tight"><%= event.startDate %></p>
               </div>

               <button type="button" data-eventId="<%= event.id %>"
                  class="group inline-flex items-center justify-center  deleteButton">
                  <svg class="h-8 w-8 fill-current text-primary-900 transition-colors group-hover:text-secondary-900">
                     <use href="/assets/images/icons/sprite.svg#trash"></use>
                  </svg>
               </button>
            </div>
         </div>
      </div>
      <% } %>
      <% if (events.length) { %>
      <a href="/checkout">
         <div class="mt-8 flex justify-end sm:mt-12">
            <button type="button"
               class="block h-[55px] w-full max-w-[302px] rounded-full border-none bg-primary-900 font-bold text-primary-100 outline-none transition-colors hover:bg-primary-900/75 disabled:bg-primary-900/50">
               checkout
            </button>
         </div>
      </a>
      <% } %>
</main>
<script src="/assets/scripts/cart.js"></script>